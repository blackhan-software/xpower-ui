      script(
        src="https://cdn.jsdelivr.net/npm/react@18.3.1/umd/react.development.js"
        integrity="sha256-KDSP72yw7Yss7rIt6vgkQo/ROHXYTHPTj3fdIW/CTn8=" crossorigin="anonymous")
