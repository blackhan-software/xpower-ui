doctype html
html(
  lang="en" style="--xp-powered:var({{XP_POWERED}});--xp-powered-dark:var({{XP_POWERED_DARK}});"
)
  head
    if mode !== 'development'
      include ./analytics.pug
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(name="description" content='{{DESCRIPTION}}.')
    title='{{TITLE}}'
    link(
      href="/images/svg/xpower-light.svg" media="(prefers-color-scheme:light)" rel="icon")
    link(
      href="/images/svg/xpower-dark.svg" media="(prefers-color-scheme:dark)" rel="icon")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha256-YvdLHPgkqJ8DVUxjjnGVlMMJtNimJ6dYkowFFvp4kKs="
      crossorigin="anonymous" rel="stylesheet")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
      integrity="sha256-YW7U7x59rUPZ3DWzQKbalM/9j2Cp8wapJVQPRxL4w1k="
      crossorigin="anonymous" rel="stylesheet")
    block styles
  body.container.d-flex.flex-column.p-3.pb-0(
    ondragstart="return false;" ondrop="return false;"
  )
    block globals
    block header
    block content
    block footer
    script(
      src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"
      integrity="sha256-w8CvhFs7iHNVUtnSP0YKEg00p9Ih13rlL9zGqvLdePA="
      crossorigin="anonymous")
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha256-9SEPo+fwJFpMUet/KACSwO+Z/dKMReF9q4zFhU/fT9M="
      crossorigin="anonymous")
    if mode === 'development'
      script(
        src="https://cdn.jsdelivr.net/npm/react@18.1.0/umd/react.development.js"
        integrity="sha256-O0ZCbs+1va83WjpVQuSLmQY0xV3jHyeThUup7w0xE4s="
        crossorigin="anonymous")
      script(
        src="https://cdn.jsdelivr.net/npm/react-dom@18.1.0/umd/react-dom.development.js"
        integrity="sha256-zGUasBCF4XVxXwdYz3CtwN81aeFeU7UzG1kQ4k+X2Dk="
        crossorigin="anonymous")
    else
      script(
        src="https://cdn.jsdelivr.net/npm/react@18.1.0/umd/react.production.min.js"
        integrity="sha256-jZ7REICtj3fBbBmJnVaiC5WfYBLqh2yHrcRGG33uaQg="
        crossorigin="anonymous")
      script(
        src="https://cdn.jsdelivr.net/npm/react-dom@18.1.0/umd/react-dom.production.min.js"
        integrity="sha256-BeltXRd9g0ocrTTHTHk1Lw34g/Wy8yrKM0QyGcNUflg="
        crossorigin="anonymous")
    block scripts
