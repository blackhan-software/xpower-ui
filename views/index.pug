      src="https://cdn.jsdelivr.net/npm/ethers@6.12.0/dist/ethers.umd.min.js"
      integrity="sha256-f5iLwQiFw8If7KUF2hSB74TgEKBK2O85tfgqjeFf5G8=" crossorigin="anonymous")
