doctype html
html(
  lang="en" style="--xp-accentuated:{{XP_ACCENTUATED}};--xp-accentuated-i:{{XP_ACCENTUATEDi}};--xp-accentuated-dark:{{XP_ACCENTUATED_DARK}};--xp-accentuated-dark-i:{{XP_ACCENTUATED_DARKi}};--xp-powered:{{XP_POWERED}};--xp-powered-i:{{XP_POWEREDi}};--xp-powered-dark:{{XP_POWERED_DARK}};--xp-powered-dark-i:{{XP_POWERED_DARKi}};"
)
  head
    if mode !== 'development'
      include ./analytics.pug
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(name="description" content='{{DESCRIPTION}}.')
    title='{{TITLE}}'
    link(
      href="/images/svg/xpower-light.svg" media="(prefers-color-scheme:light)" rel="icon")
    link(
      href="/images/svg/xpower-dark.svg" media="(prefers-color-scheme:dark)" rel="icon")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha256-MBffSnbbXwHCuZtgPYiwMQbfE7z+GOZ7fBPCNB06Z98="
      crossorigin="anonymous" rel="stylesheet")
