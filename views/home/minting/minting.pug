div#minting
  style(type='text/css').
    div#minting > div.btn-group.mint:nth-of-type(n+{{LHX_LEVEL}}):nth-of-type(-n+{{RHX_LEVEL}}) { display: block; }
  style(type='text/css').
    div#minting > div.btn-group.mint:nth-of-type(n+{{LHX_LEVEL}}):nth-of-type(-n+{{RHS_LEVEL}}) svg.bi-check-circle-fill { display: none; }
  style(type='text/css').
    div#minting > div.btn-group.mint:nth-of-type(n+{{RHX_LEVEL}}) svg.bi-check-circle { display: none; }
  div.form-label(for="mined-nonces")
    | Mined Amounts Mintable
  - let level = 1
  while level <= 64
    div.btn-group.mint(
      role="group"
    )
      span.d-inline-block(
        tabindex=0 data-bs-toggle="tooltip" data-bs-placement="top"
        title=`These mined tokens will be queued for minting`
      )
        button.btn.btn-outline-warning.ignore(
          type="button"
        )
          include ../../../public/images/pug/check-circle-fill.svg.pug
          include ../../../public/images/pug/check-circle.svg.pug
      button.btn.btn-outline-warning.minter(
        type="button" disabled
      )
        span.spinner.spinner-border.spinner-border-sm.float-start.spinner-grow(
          role="status" style="display: none"
        )
        span.text: | Mint {{AMOUNT_#{level}}} <span class="d-none d-sm-inline">{{TOKEN}}</span>
      span.d-inline-block(
        tabindex=0 data-bs-toggle="tooltip" data-bs-placement="left"
        title=`Number of level {{LEVEL_${level}}} {{TOKEN}} tokens mined`
      )
        button.btn.btn-outline-warning.nn-counter(
          style="border-radius: 0"
          type="button" disabled
        )
          | 0
      span.d-inline-block(
        tabindex=0 data-bs-toggle="tooltip" data-bs-placement="left"
        title=`Number of level {{LEVEL_${level}}} {{TOKEN}} tokens minted`
      )
        button.btn.btn-outline-warning.tx-counter(
          style="border-radius: 0"
          type="button" disabled
        )
          | 0
      span.d-inline-block(
        tabindex=0 data-bs-toggle="tooltip" data-bs-placement="top"
        title=`Forget these mined tokens without minting`
      )
        button.btn.btn-outline-warning.forget(
          type="button" disabled
        )
          | &times;
    - level++
