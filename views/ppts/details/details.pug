each year in Array.from(YEARS).reverse()
  - let nft_id = 100 * year + 3 * index
  div.row.year(
    style=`display:${
      YEARS[YEARS.length-1] - year ? 'none' : 'flex'
    }`
  )
    div.col-sm.nft-details-lhs
      div.nft-image-wrap
        a(target="_blank")
          span.spinner.spinner-border(role="status")
          img.img-fluid.nft-image(loading="lazy")

    div.col-sm.nft-details-rhs
      div.form-label
        | Year of Issuance
      div.input-group.nft-issuance-year
        input.form-control(
          readonly value=`${year}`
          name=`ppt-issuance-year-${levels[index]}-${year}`
        )
        span.input-group-text.info
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.form-label
        | Personal Balance
      div.input-group.nft-balance
        input.form-control(
          placeholder="0" readonly
          name=`ppt-balance-${levels[index]}-${year}`
        )
        span.input-group-text.info
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.form-label
        | Total Supply
      div.input-group.nft-total-supply
        input.form-control(
          placeholder="0" readonly
          name=`ppt-total-supply-${levels[index]}-${year}`
        )
        span.input-group-text.info
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.btn-group.nft-claimer-expander.d-sm-none(
        role="group" style="margin-top: 1em; width: 100%"
      )
        button.btn.btn-outline-warning.toggle-old.no-ellipsis
          i.bi-eye-fill
        button.btn.btn-outline-warning.claimer-expander
          i.bi-chevron-down
        button.btn.btn-outline-warning.info(style="width: 43px")
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.form-label.nft-claimed-label.d-none.d-sm-flex
        | Minted Amount
      div.input-group.nft-claimed.d-none.d-sm-flex(
        role="group"
      )
        input.form-control(
          placeholder="0" readonly
          name=`ppt-claimed-${levels[index]}-${year}`
        )
        span.input-group-text.info
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.form-label.nft-claimable-label.d-none.d-sm-flex
        | Mintable Amount
      div.input-group.nft-claimable.d-none.d-sm-flex(
        role="group"
      )
        input.form-control(
          placeholder="0" readonly
          name=`ppt-claimable-${levels[index]}-${year}`
        )
        span.input-group-text.info
          include ../../../public/images/pug/info-circle-fill.svg.pug

      div.btn-group.nft-claimer.d-none.d-sm-flex(
        role="group"
      )
        button.btn.btn-outline-warning.toggle-old.no-ellipsis
          i.bi-eye-fill
        button.btn.btn-outline-warning.claimer(disabled)
          span.spinner.spinner-border.spinner-border-sm.float-start(
            role="status" style="display: none"
          )
          span.text: | Claim Rewards
        button.btn.btn-outline-warning.info
          include ../../../public/images/pug/info-circle-fill.svg.pug
  hr.year(style=`display:${
    YEARS[YEARS.length-1] - year ? 'none' : 'block'
  }`)
