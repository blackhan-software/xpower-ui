footer.mt-auto.pb-3
    nav.navbar.px-2.py-0
        ul.navbar-nav
            li.nav-item
                a.nav-link.link-light.lower.linkedin(
                    data-bs-toggle="tooltip" data-bs-placement="top"
                    href="https://www.linkedin.com/company/blackhan"
                    title="LinkedIn" target="_blank"
                )
                    span: | &copy;
                    span
                        = ' ' + new Date().getFullYear()
                    span.d-none.d-sm-inline
                        = ' ' + 'Blackhan Software Ltd'

        ul.navbar-nav.d-flex.flex-row.ml-auto
            li.nav-item.pb-1.pt-1.pe-1
                a.nav-link.link-light.lower.migrate(
                    href="/migrate?token={{TOKEN}}" title="Migrate tokens"
                    data-bs-toggle="tooltip" data-bs-placement="top"
                )
                    i.bi.bi-capslock-fill
                    i.bi.bi-capslock
            li.nav-item.pb-1.pt-1.pe-1
                a.nav-link.link-light.lower.smart-contract(
                    target="_blank" title="Smart contract of the {{TOKEN}} token"
                    data-bs-toggle="tooltip" data-bs-placement="top"
                )
                    i.bi.bi-cpu-fill
                    i.bi.bi-cpu
            li.nav-item.pb-1.pt-1.pe-1
                a.nav-link.link-light.lower.add-token(
                    href="#" title="Add the {{TOKEN}} token to your Metamask"
                    data-bs-toggle="tooltip" data-bs-placement="top"
                )
                    i.bi.bi-plus-square-fill
                    i.bi.bi-plus-square
            li.nav-item.pb-1.pt-1.pe-1
                a.nav-link.link-light.lower.github(
                    href="https://github.com/blackhan-software" target="_blank"
                    data-bs-toggle="tooltip" data-bs-placement="top" title="GitHub"
                )
                    i.bi.bi-github
            li.nav-item.pb-1.pt-1.pe-1
                include ./footer-youtube.pug
            li.nav-item.pb-1.pt-1.pe-1
                include ./footer-discord.pug
            li.nav-item.pb-1.pt-1.pe-1
                include ./footer-telegram.pug
            li.nav-item.pb-1.pt-1.pe-1
                include ./footer-twitter.pug
            li.nav-item.d-none.d-sm-block
                include ./footer-avalanche.pug
