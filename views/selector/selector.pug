form#selector
  div.btn-group.selectors(
    role="group"
  )
    a.btn.btn-outline-warning.selector-thor(
      type="button" href="?token=THOR" class="{{SELECT0R_THOR}}"
    )
      span.spinner.spinner-border.spinner-border-sm.float-sm-start(
        role="status" style="display:none"
      )
      img.float-sm-start(
          alt="THOR"
          class="{{xtoken}}"
          height="24" width="24"
          src=`/images/svg/thor-black.svg`
      )
      span.d-none.d-sm-inline: | THOR
