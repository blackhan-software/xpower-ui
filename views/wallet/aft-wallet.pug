form#aft-wallet
  label.form-label
    | Wallet Address and {{TOKEN}} Balance
  div.input-group.wallet-address
    button.form-control.input-group-text#otf-wallet-toggle(
      data-bs-toggle="tooltip" data-bs-placement="top"
      role="button"
      title="Enable minter wallet & show balance of AVAX"
    )
      i.bi-wallet
    input#aft-wallet-address.form-control(
      placeholder="0x0000000000000000000000000000000000000000"
      data-bs-toggle="tooltip" data-bs-placement="top"
      readonly title="Wallet address" type="text"
    )
    input#aft-wallet-balance.form-control(
      data-bs-toggle="tooltip" data-bs-placement="top"
      placeholder="0" readonly type="text"
      title=`Balance of proof-of-work {{TOKEN}} tokens`
    )
    button.form-control.input-group-text.info(
      data-bs-toggle="tooltip" data-bs-placement="top"
      role="tooltip"
      title="Wallet address & balance of {{TOKEN}} tokens"
    )
      include ../../public/images/pug/info-circle-fill.svg.pug
