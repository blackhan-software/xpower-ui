block header
  include ../header/header.pug

block content
  content
    h1: | Mint stakeable XPower NFT Bonds on Avalanche <img src="/images/png/avalanche-icon/avalanche-64x64.png" height=24 width=24>
    include ../connector/connector.pug

    form#minter
      label.form-label(for="minter-address")
        | Minter's Address and Balance
      div.input-group.mb-3.minter-address
        input#minter-address.form-control(
          type="text" placeholder="0x0000000000000000000000000000000000000000"
          readonly
        )
        input#balance.form-control(
          data-bs-toggle="tooltip" data-bs-placement="top"
          title=`Balance of {{TOKEN}} proof-of-work tokens` readonly
          type="text" placeholder="0"
        )
        span.input-group-text.info(
          data-bs-toggle="tooltip" data-bs-placement="top"
          title="Address XP0W NFTs shall be minted for & balance"
        )
          include ../../public/images/pug/info-circle-fill.svg.pug

    form#selector
      div.btn-group.selectors(
        role="group"
      )
        a.btn.btn-outline-warning.selector-cpu(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          href="/nfts?token=XPOW.CPU" title="Use XPOW.CPU tokens"
        )
          | CPU
        a.btn.btn-outline-warning.selector-gpu(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          href="/nfts?token=XPOW.GPU" title="Use XPOW.GPU tokens"
        )
          | GPU
        a.btn.btn-outline-warning.selector-asic(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          href="/nfts?token=XPOW.ASIC" title="Use XPOW.ASIC tokens"
        )
          | ASIC

    form#minting
      label.form-label(for="minting")
        | Mint & Manage {{TOKEN}} NFTs
      - let kinds = ["UNIT", "KILO", "MEGA", "GIGA", "TERA", "PETA", "EXA", "ZETTA", "YOTTA", "1E27"]
      - let index = 0
      while index < 9
        div.btn-group.nft-minter(
          role="group" data-kind=`${kinds[index]}`
        )
          div.btn-group(role="group")
            button.btn.btn-outline-warning.toggle.no-ellipsis(
              type="button" data-bs-toggle="tooltip" data-bs-placement="top"
              title=`Show ${kinds[index]} NFTs` data-state="off"
            )
              i.bi-chevron-down
          button.btn.btn-outline-warning.minter(
            type="button" data-bs-toggle="tooltip" data-bs-placement="top"
            title=`Stakeable ${kinds[index]} NFTs (for [1${kinds[index].slice(0,1)}...1${kinds[index+1].toUpperCase().slice(0,1)}] XPOW tokens)`
          )
            | #{kinds[index].slice(0,1)}<span class="d-none d-sm-inline">#{kinds[index].slice(1)} NFTs</span>
          button.btn.btn-outline-warning.balance(
            type="button" data-bs-toggle="tooltip" data-bs-placement="top"
            title=`Overall personal balance & supply of ${kinds[index]} NFTs`
          )
            | &middot;&middot;&middot;
          div.btn-group(role="group")
            button.btn.btn-outline-warning.decrease(
              type="button" data-bs-toggle="tooltip" data-bs-placement="top" disabled
              title=`Decrease (Click: -1, SHIFT+Click: -10, CTRL+Click: -100)`
            )
              include ../../public/images/pug/dash-circle-fill.svg.pug
          button.btn.btn-outline-warning.amount(
            type="button" data-bs-toggle="tooltip" data-bs-placement="top"
            title=`${kinds[index]} NFTs to mint`
          )
            | 0
          div.btn-group(role="group")
            button.btn.btn-outline-warning.increase(
              type="button" data-bs-toggle="tooltip" data-bs-placement="top" disabled
              title=`Increase (Click: +1, SHIFT+Click: +10, CTRL+Click: +100)`
            )
              include ../../public/images/pug/plus-circle-fill.svg.pug
        div.nft-details(
          role="group" data-kind=`${kinds[index]}`
        )
          include ./nfts-details.pug
        - index++

      div.btn-group.nft-batch-minter(
        role="group" data-kind=`${kinds[index]}`
      )
        button.btn.btn-outline-warning#toggle-all.no-ellipsis(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          title=`Show all NFTs` data-state="off"
        )
          i.bi-chevron-down
        button.btn.btn-outline-warning#burn-approval(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          title="Approve XPOWs to be burned (to able to mint NFTs)" disabled
        )
          span.spinner.spinner-border.spinner-border-sm.float-start(
            role="status" style="visibility: hidden"
          )
          span.text: | Approve
        button.btn.btn-outline-warning#batch-minter(
          type="button" disabled
        )
          span.spinner.spinner-border.spinner-border-sm.float-start(
            role="status" style="visibility: hidden"
          )
          span.text: | Batch Mint NFTs
        button.btn.btn-outline-warning.info(
          type="button" data-bs-toggle="tooltip" data-bs-placement="top"
          title="(Batch) mint stakeable {{TOKEN}} NFTs"
        )
          include ../../public/images/pug/info-circle-fill.svg.pug

